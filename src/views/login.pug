extends base 

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        
        input(type="text", name="username", required, placeholder="user name")
        input(type="password", name="password", required, placeholder="password")
        input(type="submit", value="Join")
        include partials/social-login
    div.auth-switch
        span No account?
            a(href="/login") Join now &rarr;

            